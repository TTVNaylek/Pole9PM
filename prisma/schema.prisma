generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  group    String
  email    String @unique
  name     String
  password String

  UserToken UserToken[]
  salt      String

  otp_enabled  Boolean @default(false)
  otp_verified Boolean @default(false)

  otp_ascii    String?
  otp_hex      String?
  otp_base32   String?
  otp_auth_url String?

  @@map(name: "users")
}

model UserToken {
  id     String @id @default(uuid())
  token  String
  userID String @unique
  user   User   @relation(fields: [userID], references: [id], onDelete: Cascade)

  @@map(name: "userToken")
}

model Groups {
  id   String @id @default(uuid())
  name String
}
