generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id_User  String   @id @default(uuid())
  group    Groupes? @relation(fields: [groupId], references: [id_Groupes]) // Relation avec Groupes
  groupId  Int?
  email    String   @unique
  name     String
  password String

  UserToken UserToken[]
  salt      String

  otp_enabled  Boolean @default(false)
  otp_verified Boolean @default(false)

  otp_ascii    String?
  otp_hex      String?
  otp_base32   String?
  otp_auth_url String?

  @@map(name: "Users")
}

model UserToken {
  id_Token String @id @default(uuid())
  userID   String @unique
  token    String
  user     User   @relation(fields: [userID], references: [id_User], onDelete: Cascade)

  @@map(name: "UserToken")
}

model Services {
  id_Services Int             @id @default(autoincrement())
  serviceName String
  email       String
  password    String
  salt        String
  Groupe      GroupeService[]

  @@map(name: "Services")
}

model Groupes {
  id_Groupes    Int             @id @default(autoincrement())
  GroupName     String          @unique
  A2F           Boolean
  ViewLOS       Boolean
  ViewIDS       Boolean
  ViewPsswAge   Boolean
  CopyPassw     Boolean
  MngMembers    Boolean
  MngGrp        Boolean
  MngMembersGrp Boolean
  MngServices   Boolean
  HstrySrvUsed  Boolean
  User          User[]
  Service       GroupeService[]

  @@map(name: "Groupes")
}

model GroupeService {
  Groupe    Groupes  @relation(fields: [GroupeId], references: [id_Groupes])
  GroupeId  Int
  Service   Services @relation(fields: [ServiceID], references: [id_Services])
  ServiceID Int

  @@id([GroupeId, ServiceID])
}
